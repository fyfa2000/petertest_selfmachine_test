<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="area"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.huapintang.cashregister.fragment.area.view.AreaFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"     android:paddingLeft="40px"
            android:paddingRight="40px"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="20px"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_gravity="right|bottom">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="200px"
                android:layout_height="400px"
                android:src="@drawable/a"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/iv7"
                android:layout_marginEnd="40px" />
            <ImageView
                android:id="@+id/iv7"
                android:layout_width="200px"
                android:layout_height="400px"
                android:src="@drawable/b"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true" />


            <ImageView
                android:id="@+id/iv2"
                android:layout_width="200px"
                android:layout_marginLeft="40px"
                android:layout_height="400px"
                android:src="@drawable/c"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv7" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="230px"
                android:layout_height="200px"
                android:src="@drawable/d"
                android:scaleType="fitXY"
                android:layout_marginEnd="37px"
                android:layout_alignTop="@+id/iv4"
                android:layout_toStartOf="@+id/iv4" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="400px"
                android:layout_height="200px"
                android:scaleType="fitXY"
                android:src="@drawable/e"
                android:layout_alignTop="@+id/line1"
                android:layout_marginTop="50px"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="230px"
                android:layout_height="200px"
                android:scaleType="fitXY"
                android:src="@drawable/f"
                android:layout_marginStart="37px"
                android:layout_above="@+id/iv6"
                android:layout_toEndOf="@+id/iv4" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="800px"
                android:layout_height="180px"
                android:src="@drawable/g"
                android:scaleType="fitXY"
                android:layout_below="@+id/iv3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33px" />


            <View
                android:id="@+id/line1"
                android:layout_width="1600px"
                android:background="@color/white"
                android:layout_height="2px"
                android:layout_centerInParent="true"
            />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:text="一层"
                android:layout_height="wrap_content"
                android:layout_marginTop="72px"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/line1" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:text="二层"
                android:layout_height="wrap_content"
                android:layout_marginTop="33px"
                android:layout_alignTop="@+id/iv3"
                android:layout_alignStart="@+id/line1" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="200px"
                    android:layout_height="80px"
                    android:layout_marginLeft="60px"
                    android:text="上一步" />

                <!--<Button-->
                    <!--android:id="@+id/btn_next"-->
                    <!--android:layout_width="200px"-->
                    <!--android:layout_height="80px"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_marginRight="60px"-->
                    <!--android:text="下一步" />-->

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
