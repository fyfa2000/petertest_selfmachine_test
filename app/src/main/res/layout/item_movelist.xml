<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.huapintang.cashregister.fragment.Home.model.MoveBean.DataBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10px"
        android:paddingLeft="15px"
        android:paddingRight="15px"
        android:paddingTop="20px">
        <!--android:background="@{item.isSelection?@color/white:@drawable/bg_item_move}"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420px"
            android:background="@{item.isSelection?@drawable/bg_item_move_select:@drawable/bg_item_move}"
            android:padding="8px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:imageUrl="@{item.backimg}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58px"
                    android:gravity="center"
                    android:text="@{item.title}"
                    android:textColor="@{item.isSelection?@color/selectblack:@color/white}"
                    android:textSize="24px" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>