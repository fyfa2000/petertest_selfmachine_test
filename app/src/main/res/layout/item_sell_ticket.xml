<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="itemSellTicket"
            type="com.huapintang.cashregister.fragment.sellTicket.model.GetTicketResult.DataBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10px"
        android:paddingTop="10px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{itemSellTicket.isSelect?@drawable/bg_item_move_select:@drawable/bg_item_move}"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10px">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="8px"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@{itemSellTicket.title}"
                    android:textColor="@{itemSellTicket.isSelect?@color/selectblack:@color/white}"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:text="@{itemSellTicket.price}"
                    android:textColor="@color/colorMain"
                    android:textSize="24px" />
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="8px"-->
                    <!--android:text="å…ƒ"-->
                    <!--android:textColor="@color/colorMain"-->
                    <!--android:textSize="24px" />-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>