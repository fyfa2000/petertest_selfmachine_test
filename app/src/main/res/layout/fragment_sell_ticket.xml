<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sellTicket"
            type="com.huapintang.cashregister.fragment.sellTicket.model.SellTicket" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.huapintang.cashregister.fragment.sellTicket.view.SellTicketFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:paddingTop="20px">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lv_move"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_shap_sell_ticke" />

                <LinearLayout
                    android:layout_width="280px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/bg_shap_sell_ticke"
                    android:orientation="vertical"
                    android:padding="20px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{sellTicket.titile}"
                        android:textColor="@color/white"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/tv_tisi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="票种"
                        android:textColor="@color/white"
                        android:textSize="24px" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lv_sell_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_marginTop="10px"
                        android:layout_weight="1"></android.support.v7.widget.RecyclerView>

                    <TextView
                    android:id="@+id/tv_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="日期："
                        android:textColor="@color/white"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:background="@drawable/bg_item_move_select"
                        android:gravity="center"
                        android:padding="10px"
                        android:text="@{sellTicket.date}"
                        android:textColor="@color/black"
                        android:textSize="24px" />


                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="时间段："
                        android:textColor="@color/white"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:background="@drawable/bg_item_move_select"
                        android:gravity="center"
                        android:padding="10px"
                        android:text="@{sellTicket.time}"
                        android:textColor="@color/black"
                        android:textSize="24px" />

                    <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/lv_time_list"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="10px" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="数量："
                        android:textColor="@color/white"
                        android:textSize="24px" />

                    <LinearLayout
                        android:id="@+id/ll_num"
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:textColor="@color/white">

                        <Button
                            android:id="@+id/btn_sub"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="-"
                            android:textSize="40px" />

                        <TextView
                            android:layout_width="60px"
                            android:layout_height="40px"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="@{sellTicket.numString}"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="+"
                            android:textSize="40px" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="200px"
                    android:layout_height="80px"
                    android:layout_marginLeft="60px"
                    android:text="上一步" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="200px"
                    android:layout_height="80px"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="60px"
                    android:text="下一步" />

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
