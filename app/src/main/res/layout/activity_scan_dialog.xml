<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="scanString"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@mipmap/background"
        android:orientation="vertical"
        tools:context="com.huapintang.cashregister.dialog.ScanDialog">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0px"
      android:layout_weight="1">

      <LinearLayout
          android:id="@+id/ll_msg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="180px"
          android:gravity="center_horizontal"
          android:orientation="vertical">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="尊敬的顾客!"
              android:textColor="@color/white"
              android:textSize="40px" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="15px"
              android:text="您可将电子票的二维码紧贴左侧扫码区扫描后取票"
              android:textColor="@color/white"
              android:textSize="35px" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="25px"
              android:text="1.请把“二维码”放到“二维码扫描窗”"
              android:textColor="@color/white"
              android:textSize="35px" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="25px"
              android:text="2.等待扫描“付款二维码”"
              android:textColor="@color/white"
              android:textSize="35px" />


      </LinearLayout>


      <LinearLayout
          android:id="@+id/ll_test_msg"
          android:visibility="invisible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ll_msg"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="30px"
          android:background="@drawable/white_bg_btn"
          android:gravity="center_vertical"
          android:padding="10px">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@mipmap/tishi" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="20px"
              android:layout_marginRight="30px"
              android:text="请稍候！系统正在读取二维码信息..."
              android:textColor="@color/white"
              android:textSize="30px" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/ll_test_msg"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="20px"
          android:gravity="center_vertical">

          <ImageView
              android:layout_width="200px"
              android:layout_height="340px"
              android:layout_marginLeft="150px"
              android:scaleType="fitXY"
              android:src="@mipmap/phone" />

          <ImageView
              android:layout_width="300px"
              android:layout_height="150px"
              android:layout_marginLeft="30px"
              android:src="@mipmap/right" />

          <ImageView
              android:layout_width="450px"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50px"
              android:src="@mipmap/eq" />


      </LinearLayout>

  </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="20px">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="200px"
                android:layout_height="80px"
                android:layout_marginLeft="60px"
                android:text="上一步" />

            <!--<Button-->
            <!--android:id="@+id/btn_next"-->
            <!--android:layout_width="200px"-->
            <!--android:layout_height="80px"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_marginRight="60px"-->
            <!--android:text="下一步" />-->

            <ImageView
                android:layout_width="80px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/logo" />
        </RelativeLayout>
        <com.huapintang.cashregister.utils.ScanEditText
            android:id="@+id/et_code"
            android:layout_width="1px"
            android:layout_height="1px"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10px"
            android:textSize="14px" />
    </LinearLayout>


</layout>
