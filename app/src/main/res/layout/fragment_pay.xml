<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pay"
            type="String" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.huapintang.cashregister.fragment.pay.view.PayFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_margin="40px"
                    android:layout_marginLeft="60px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_shap_sell_ticke"
                    android:orientation="vertical"
                    android:padding="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="订单如下:"
                        android:textColor="@color/white"
                        android:textSize="35px" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/lv_select_ticket"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单总额：￥"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{pay}"
                            android:textColor="@color/colorMain" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_margin="40px"
                    android:layout_marginRight="60px"
                    android:layout_weight="1"
                    android:background="@drawable/bg_shap_sell_ticke"
                    android:orientation="vertical"
                    android:padding="20px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="请选择付款方式:"
                        android:textColor="@color/white"
                        android:textSize="35px" />

                    <LinearLayout
                        android:id="@+id/ll_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="20px">

                        <ImageView
                            android:layout_width="0px"
                            android:layout_height="60px"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_weixin_pay" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="微信支付"
                            android:textColor="@color/black"
                            android:textSize="35px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_ali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="20px">

                        <ImageView
                            android:layout_width="0px"
                            android:layout_height="60px"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_alli_pay" />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="支付宝支付"
                            android:textColor="@color/black"
                            android:textSize="35px" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20px"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="20px">

                        <LinearLayout
                            android:layout_width="0px"
                            android:layout_height="60px"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="70px">

                            <ImageView
                                android:layout_width="100px"
                                android:layout_height="60px"
                                android:src="@mipmap/ic_card" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60px"
                                android:layout_marginLeft="15px"
                                android:text="会员卡"
                                android:textColor="@color/black"
                                android:textSize="35px" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="会员卡余额支付"
                            android:textColor="@color/black"

                            android:textSize="35px" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="200px"
                    android:layout_height="80px"
                    android:layout_marginLeft="60px"
                    android:text="上一步" />

                <!--<Button-->
                <!--android:id="@+id/btn_next"-->
                <!--android:layout_width="200px"-->
                <!--android:layout_height="70px"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginRight="60px"-->
                <!--android:text="下一步" />-->

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/logo" />
            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
</layout>
