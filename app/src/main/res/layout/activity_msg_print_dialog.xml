<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<data>

    <variable
        name="msgdialog"
        type="com.huapintang.cashregister.bean.MsgDialogBean"/>
</data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.huapintang.cashregister.dialog.MsgPrintDialogActivity">
        <LinearLayout
            android:layout_width="500px"
            android:background="@color/white"
            android:layout_height="600px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tishi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200px"
                    android:layout_centerHorizontal="true"
                    android:text="@{msgdialog.msg1}"
                    android:textColor="@color/black"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_msg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tishi1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:text="@{msgdialog.msg2}"
                    android:textColor="@color/black"
                    android:textSize="30px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="80px">

                <TextView
                    android:id="@+id/tv_again_printer"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorMain"
                    android:gravity="center"
                    android:text="@{msgdialog.btnMsg}"
                    android:textSize="30px"
                    android:textColor="@color/white" />



                <!--<TextView-->
                <!--android:layout_width="0px"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent" />-->

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>
